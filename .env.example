# ========================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# ========================================
# Copy this file to .env and fill in the values

# ============ Database Configuration ============
# PostgreSQL Connection String
# Format: postgresql://username:password@host:port/database
DATABASE_URL="postgresql://postgres:password@localhost:5432/hr_system"

# ============ Redis Configuration ============
# Redis Connection String for caching
REDIS_URL="redis://:password@localhost:6379"

# ============ JWT Configuration ============
# Secret key for JWT token signing (MUST be random and secure)
# Generate with: openssl rand -hex 64
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# ============ Server Configuration ============
# Server port
PORT=3000

# Node environment (development, production, test)
NODE_ENV=development

# ============ CORS Configuration ============
# Frontend URL(s) for CORS - comma-separated for multiple URLs
FRONTEND_URL=http://localhost:5173,http://localhost:3000

# ============ Rate Limiting Configuration ============
# General rate limiting
RATE_LIMIT_WINDOW_MS=900000          # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=1000         # Max requests per window

# Authentication rate limiting
AUTH_RATE_LIMIT_MAX=5                # Max login attempts per window

# API rate limiting
API_RATE_LIMIT_MAX=100               # Max API calls per minute

# ============ Security Configuration ============
# Bcrypt rounds for password hashing (10-12 recommended)
BCRYPT_ROUNDS=12

# ============ Logging Configuration ============
# Log level: error, warn, info, debug
LOG_LEVEL=info

# ============ Session Configuration ============
# Session timeout in milliseconds
SESSION_TIMEOUT=3600000              # 1 hour

# ============ Development Flags ============
# Enable SQL query logging (true/false)
DEBUG_SQL=false

# Enable Prisma query logging (true/false)
ENABLE_QUERY_LOGGING=false

# Prisma log level: query, info, warn, error
PRISMA_LOG_LEVEL=warn

# Pretty error formatting (true/false)
PRETTY_ERRORS=true

# Enable CORS debug (true/false)
ENABLE_CORS_DEBUG=false

# Enable request logging (true/false)
ENABLE_REQUEST_LOGGING=false

# Disable rate limiting completely (true/false)
DISABLE_RATE_LIMITING=false

# ============ Email Configuration (Optional) ============
EMAIL_FROM=noreply@hr-system.local
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# ============ File Upload Configuration ============
# Maximum file size in bytes (10MB default)
MAX_FILE_SIZE=10485760

# Upload directory path
UPLOAD_PATH=./uploads

# ============ Cloudinary Configuration (Optional) ============
# For cloud storage of images
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ============ Backup Configuration ============
# Backup directory path
BACKUP_PATH=./backups

# Auto backup enabled (true/false)
AUTO_BACKUP_ENABLED=false

# Backup retention days
BACKUP_RETENTION_DAYS=30

# ============ Face Recognition Configuration ============
# Face recognition confidence threshold (0-100%)
FACE_RECOGNITION_THRESHOLD=80

# Face recognition model path
FACE_RECOGNITION_MODEL_PATH=./models/face

# ============ Attendance Configuration ============
# Grace period for late check-in (minutes)
LATE_GRACE_PERIOD=15

# Grace period for early check-out (minutes)
EARLY_GRACE_PERIOD=15

# Maximum GPS distance from office (meters)
MAX_GPS_DISTANCE=500

# ============ Leave Configuration ============
# Annual leave days per year
ANNUAL_LEAVE_DAYS=12

# Sick leave days per year
SICK_LEAVE_DAYS=30

# ============ Notification Configuration (Optional) ============
# Enable notifications (true/false)
ENABLE_NOTIFICATIONS=false

# Notification service (email, sms, push)
NOTIFICATION_SERVICE=email

# ============ Timezone ============
TZ=Asia/Ho_Chi_Minh
